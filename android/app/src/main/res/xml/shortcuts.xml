<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">

  <!-- Capability open App-->
  <capability android:name="actions.intent.OPEN_APP_FEATURE">
    <intent>
      <url-template android:value="https://appactions.s3.amazonaws.com/{featureParam}" />
      <parameter android:name="feature" android:key="featureParam"/>
    </intent>
  </capability>

  <!-- Capability Money Transfer -->
  <capability android:name="actions.intent.CREATE_MONEY_TRANSFER">
    <intent>
      <url-template android:value="https://appactions.s3.amazonaws.com/transfer{?value,transferOriginName,transferDestinationName}" />
      <!-- ===== Parameters ===== -->
      <!-- Transfer Amount -->
      <parameter android:name="moneyTransfer.amount.value" android:key="value"/>
      <!-- Sender Name -->
      <parameter android:name="moneyTransfer.moneyTransferOrigin.name" android:key="transferOriginName"/>
      <!-- Recipient Name -->
      <parameter android:name="moneyTransfer.moneyTransferDestination.name" android:key="transferDestinationName"/>
    </intent>
  </capability>

  <!-- Shortcut Open Balance -->
  <shortcut android:shortcutId="balance" android:enabled="true" android:icon="@drawable/balance" android:shortcutShortLabel="@string/shortLabelBalance" android:shortcutLongLabel="@string/longLabelBalance">

    <!-- Connect with the Google assistant -->
    <capability-binding android:key="actions.intent.OPEN_APP_FEATURE">
      <parameter-binding android:value="@string/balanceAddress" android:key="feature"/>
    </capability-binding>

    <!-- Show the shortcut   -->
    <intent android:action="android.intent.action.VIEW"></intent>
  </shortcut>

  <!-- Shortcut Pay Biils -->
  <shortcut android:shortcutId="electricalBill" android:enabled="true" android:icon="@drawable/electrical_services" android:shortcutShortLabel="@string/shortElectricalBill" android:shortcutLongLabel="@string/longLabelElectricalBill">

    <!-- Connect with the Google assistant -->
    <capability-binding android:key="actions.intent.OPEN_APP_FEATURE">
      <parameter-binding android:value="@string/tabAddress" android:key="feature"/>
    </capability-binding>

    <!-- Show the shortcut   -->
    <intent android:action="android.intent.action.VIEW"></intent>
  </shortcut>
</shortcuts>
